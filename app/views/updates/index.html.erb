<div class = "row">
	<h1>My Personal Newsfeed</h1>
</div>

<div class = "row">
	<ul class = "inline-list">
		<% @countries.each do |c| %>
			<li><%= c.name %></li>
		<% end %>
	</ul>
</div>

<div class = "row">

	<% @myupdates.each do |mu| %>
		<% mu.each do |m| %>
			<% if m != nil %>
				<div class = "headline">
					<% m["articles"].each do |article| %> 
						<h3><%= article["title"] %></h3>
						<h4 class = "subheader"><%= article["publish_date"] %></h4>
						<p><%= article["summary"] %><p>
						<a href= "#"><%= link_to nil, article["url"] %></a><br>
					<% end %>
				</div>
			<% end %>
		<% end %>

	<% end %>
</div>













